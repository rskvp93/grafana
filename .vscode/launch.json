{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/pkg/cmd/grafana-server/",
      "env": {},
      "cwd": "${workspaceFolder}",
      "args": ["--homepath", "${workspaceFolder}", "--packaging", "dev"]
    },
    {
      "name": "Debug Jest test",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "jest", "--runInBand", "${file}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      // "port": 9229
    },
    {
      "name": "Remote Debug Grafana",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/src/grafana/",
      "port": 4001,
      "host": "127.0.0.1",
      "trace" : "verbose",
      "showLog": true,
      "logOutput": "rpc",
      "cwd": "${workspaceFolder}/"
      // "debugAdapter": "dlv-dap"
    },
    {
      "name": "Exec Debug Grafana",
      "type": "go",
      "asRoot": true,
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/bin/linux-amd64/grafana-server",
      "args":["-v"],
      "trace" : "verbose",
      "cwd": "${workspaceFolder}/"
      // "debugAdapter": "dlv-dap"
    }
  ]
}
